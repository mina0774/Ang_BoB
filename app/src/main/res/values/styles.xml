<resources>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6B95BB</item>
        <item name="colorPrimaryDark">#6B95BB</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">false</item>

    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="SpinnerDivideStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#6B95BB</item>
        <item name="android:dividerHeight">2dp</item>
    </style>
    <style name="SpinnerTheme" parent="AppTheme">
        <item name="android:dropDownListViewStyle">
            @style/SpinnerDivideStyle
        </item>
    </style>

</resources>
